extends ../template/layout
include ../mixins/form-helper

block content
  h1 Address Book
  h2 New Person
  a(href='/people') People Page
  form(action='/people', method='post')
    mixin field('name', 'Full Name', 'bob', true)
    mixin field('gender', 'Gender', 'm', false)
    mixin field('age', 'Age', '32', false)
    mixin field('color', 'Color', '#ff33cc', false)
    button(type='submit') Save Person
